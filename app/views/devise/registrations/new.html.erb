<div class="flex flex-col grow flex-1 items-center bg-forest-green-50 text-cream p-4">
  <h2 class="text-xl">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "flex flex-col space-y-4 pb-2"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md text-forest-green-500" %>
    </div>

    <div class="flex flex-col">
      <div class="flex">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "rounded-md text-forest-green-500" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-md text-forest-green-500" %>
    </div>

    <div class="my-2">
      <%= f.submit "Sign up", class: "btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
