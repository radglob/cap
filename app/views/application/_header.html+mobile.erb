<header class="flex flex-col space-y pb-2 px-2 bg-forest-green-500 text-cream">
  <div class="flex justify-between items-center">
    <h1 class="w-3/4 py-2 text-lg font-bold font-serif"><%= link_to "Greenmount West Community Association", root_path %></h1>
    <button class="mr-2 px-2 py-1 font-bold border rounded-sm border-cream" onclick="toggleMenu()">Menu</button>
  </div>
  <nav id="nav" class="hidden">
    <ul class="flex flex-col text-lg list-none space-y-2 font-semibold items-center py-2">
      <li><%= link_to "Your Board", board_path, class: "link" %></li>
      <li><%= link_to "Committees", committees_path, class: "link" %></li>
      <li><%= link_to "Calendar", calendar_path, class: "link" %></li>
      <% if user_signed_in? %>
        <li><%= link_to "Log out", destroy_user_session_path, class: "link", data: { "turbo-method": :delete }, method: :delete %></li>
      <% else %>
        <li><%= link_to "Log in", new_user_session_path, class: "link" %></li>
      <% end %>
    </ul>
  </nav>
</header>
<script type="text/javascript">
  function toggleMenu() {
    var nav = document.querySelector("#nav")
    nav.classList.toggle("hidden")
  }
</script>

