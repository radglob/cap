<div>
  <h1>New address</h1>

  <%= form_for [:user, @form] do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div>
      <%= f.label :address1 %>
      <%= f.text_field :address1 %>
      <% @form.errors.messages[:address1]&.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= f.label :address2 %>
      <%= f.text_field :address2 %>
    </div>

    <div>
      <%= f.label :city %>
      <%= f.text_field :city %>
      <% @form.errors.messages[:city]&.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div>
      <%= f.label :state %>
      <%= f.select :state, AddressHelper::STATES %>
      <% @form.errors.messages[:state]&.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div>
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code %>
      <% @form.errors.messages[:zip_code]&.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= f.submit "Submit address", class: "btn" %>
    </div>
  <% end %>
</div>
