<div>
  <h1>New address</h1>

  <%= form_for @address, url: user_address_path(current_user) do |f| %>
    <div>
      <%= f.label :address1 %>
      <%= f.text_field :address1 %>
      <% @address.errors.full_messages_for(:address1).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= f.label :address2 %>
      <%= f.text_field :address2 %>
    </div>

    <div>
      <%= f.label :city %>
      <%= f.text_field :city %>
      <% @address.errors.full_messages_for(:city).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div>
      <%= f.label :state %>
      <%= f.select :state, AddressHelper::STATES %>
      <% @address.errors.full_messages_for(:state).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div>
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code %>
      <% @address.errors.full_messages_for(:zip_code).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= f.submit "Submit address", class: "btn" %>
    </div>
  <% end %>
</div>
